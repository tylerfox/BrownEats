<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/red_primary</item>
        <item name="colorPrimaryDark">@color/red_dark</item>
        <item name="colorAccent">@color/red_accent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <!-- Title text -->
        <item name="android:textColorPrimary">@android:color/white</item>

        <!-- Title color in AppCompat.Light  -->
        <item name="android:textColorPrimaryInverse">@android:color/black</item>

        <!-- Menu text-->
        <item name="actionMenuTextColor">@android:color/white</item>
        <!-- Overflow -->
        <item name="android:textColorSecondary">@android:color/black</item>
        <!-- This will change drawer icon -->
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
        <!-- background of the  -->
        <!-- <item name="android:background">@color/color_primary</item> -->
    </style>

    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="dining_card"></style>

    <style name="dining_card.header_simple_title">
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_marginLeft">@dimen/card_header_simple_title_margin_left</item>
        <item name="android:layout_marginTop">@dimen/card_header_simple_title_margin_top</item>
        <item name="android:layout_marginRight">@dimen/card_header_simple_title_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/card_header_simple_title_margin_bottom
        </item>
    </style>
    
    

</resources>
